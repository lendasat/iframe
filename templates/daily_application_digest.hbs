{{#> base}}
  <table role="presentation" class="main">
    <!-- START MAIN CONTENT AREA -->
    <tr>
      <td class="wrapper">
        <table role="presentation" border="0" cellpadding="0" cellspacing="0">
          <tr>
            <td>
              <p>Hi,</p>

              <p>Here's your daily digest of new loan applications available on {{digest_date}}.</p>

              {{#if applications}}
                <p>We found <strong>{{application_count}}</strong> new loan application{{#if (gt application_count 1)}}
                  s{{/if}} for you:</p>

                {{#each applications}}
                  <div style="border: 1px solid #e0e0e0; padding: 15px; margin: 10px 0; border-radius: 5px;">
                    <h3 style="margin-top: 0; color: #333;">Loan Application</h3>
                    <ul style="margin: 10px 0;">
                      <li><strong>Loan Amount:</strong> {{loan_amount_min}} - {{loan_amount_max}} {{loan_asset}}</li>
                      <li><strong>Interest Rate:</strong> {{interest_rate}}%</li>
                      <li><strong>Duration:</strong> {{duration_days_min}} - {{duration_days_max}} days</li>
                    </ul>
                  </div>
                {{/each}}

                <p>Ready to review these applications? Click below to view all available applications.</p>

                <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
                  <tbody>
                  <tr>
                    <td align="left">
                      <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                        <tr>
                          <td>
                            <a href="{{lender_url}}" target="_blank">View All Applications</a>
                          </td>
                        </tr>
                        </tbody>
                      </table>
                    </td>
                  </tr>
                  </tbody>
                </table>
              {{else}}
                <p>No new loan applications were created in the last 24 hours. Check back tomorrow for new
                  opportunities!</p>

                <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
                  <tbody>
                  <tr>
                    <td align="left">
                      <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                        <tbody>
                        <tr>
                          <td>
                            <a href="{{lender_url}}" target="_blank">Browse Existing Applications</a>
                          </td>
                        </tr>
                        </tbody>
                      </table>
                    </td>
                  </tr>
                  </tbody>
                </table>
              {{/if}}

              <p style="margin-top: 30px; font-size: 12px; color: #666;">
                You're receiving this daily digest because you've subscribed to loan application notifications.
                <a href="{{unsubscribe_url}}" style="color: #666;">Manage your notification preferences</a>
              </p>

              <p>Thank you,</p>

              <p>The Lendasat Team</p>
            </td>
          </tr>
        </table>
      </td>
    </tr>

    <!-- END MAIN CONTENT AREA -->
  </table>
{{/base}}