{{#> base}}
  <table role="presentation" class="main">
    <!-- START MAIN CONTENT AREA -->
    <tr>
      <td class="wrapper">
        <table role="presentation" border="0" cellpadding="0" cellspacing="0">
          <tr>
            <td>
              <p>Hi {{first_name}}!</p>

              <p>Your six-digit verification code:</p>

              <p
                style="text-align: center; font-weight: bold; font-size: 24px; padding: 10px; background-color: #f0f0f0; border-radius: 4px;">
                {{code}}
              </p>


              <p><a href="{{url}}">Or click here to verify your email address</a></p>

              <p>Thank you,</p>

              <p>The Lendasat Team</p>
            </td>
          </tr>
        </table>
      </td>
    </tr>

    <!-- END MAIN CONTENT AREA -->
  </table>
{{/base}}
