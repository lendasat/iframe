{{#> base}}
  <table role="presentation" class="main">
    <!-- START MAIN CONTENT AREA -->
    <tr>
      <td class="wrapper">
        <table role="presentation" border="0" cellpadding="0" cellspacing="0">
          <tr>
            <td>
              <p>Hi,</p>

              <p>A new loan application has just been posted and is available for you to review.</p>

              <div style="border: 1px solid #e0e0e0; padding: 15px; margin: 20px 0; border-radius: 5px;">
                <h3 style="margin-top: 0; color: #333;">New Loan Application</h3>
                <ul style="margin: 10px 0;">
                  <li><strong>Loan Amount:</strong> {{loan_amount_min}} - {{loan_amount_max}} {{loan_asset}}</li>
                  <li><strong>Interest Rate:</strong> {{interest_rate}}%</li>
                  <li><strong>Duration:</strong> {{duration_days_min}} - {{duration_days_max}} days</li>
                </ul>
              </div>

              <p>Ready to take this application? Click below to view the details and make an offer.</p>

              <table role="presentation" border="0" cellpadding="0" cellspacing="0" class="btn btn-primary">
                <tbody>
                <tr>
                  <td align="left">
                    <table role="presentation" border="0" cellpadding="0" cellspacing="0">
                      <tbody>
                      <tr>
                        <td>
                          <a href="{{application_url}}" target="_blank">View Application</a>
                        </td>
                      </tr>
                      </tbody>
                    </table>
                  </td>
                </tr>
                </tbody>
              </table>

              <p style="margin-top: 30px; font-size: 12px; color: #666;">
                You're receiving this notification because you've subscribed to instant loan application alerts.
                <a href="{{unsubscribe_url}}" style="color: #666;">Manage your notification preferences</a>
              </p>

              <p>Thank you,</p>

              <p>The Lendasat Team</p>
            </td>
          </tr>
        </table>
      </td>
    </tr>

    <!-- END MAIN CONTENT AREA -->
  </table>
{{/base}}