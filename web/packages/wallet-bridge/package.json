{
  "name": "@lendasat/lendasat-wallet-bridge",
  "version": "0.0.1",
  "description": "Type-safe communication bridge between Lendasat iframe and parent wallet applications",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build"
  },
  "keywords": [
    "lendasat",
    "wallet",
    "bridge",
    "bitcoin",
    "iframe",
    "communication"
  ],
  "author": "Lendasat",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lendasat/iframe.git",
    "directory": "packages/wallet-bridge"
  },
  "bugs": {
    "url": "https://github.com/lendasat/iframe/issues"
  },
  "homepage": "https://github.com/lendasat/iframe#readme",
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "tsup": "^8.0.0",
    "typescript": "~5.9.3"
  }
}
